<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/grupo_tipo"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar grupo"
        android:textColor="@android:color/black"
        android:layout_marginTop="37dp"
        android:layout_below="@+id/radioGroup3"
        android:layout_alignRight="@+id/textView5"
        android:layout_alignEnd="@+id/textView5" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione su tipo de profesor:"
        android:textColor="@android:color/black"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/radioGroup3"
        android:layout_alignStart="@+id/radioGroup3"
        android:layout_marginTop="16dp" />

    <TextView
        android:id="@+id/agregar_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView3"
        android:layout_alignBottom="@+id/textView3"
        android:layout_marginLeft="65dp"
        android:layout_marginStart="65dp"
        android:layout_toEndOf="@+id/btn_agregarGrupo"
        android:layout_toRightOf="@+id/btn_agregarGrupo"
        android:text="Agregar materia"
        android:textColor="@android:color/black" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_agregarGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_green_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_below="@+id/radioGroup3"
        android:layout_toRightOf="@+id/textView3"
        android:layout_toEndOf="@+id/textView3"
        android:layout_marginTop="25dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_agregarMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btn_agregarGrupo"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_toEndOf="@+id/agregar_m"
        android:layout_toRightOf="@+id/agregar_m"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_green_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add" />

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="9dp"
        android:id="@+id/radioGroup3">

        <RadioButton
            android:id="@+id/p_director"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.51"
            android:text="Director" />

        <RadioButton
            android:id="@+id/p_especif"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="EspecÃ­fico" />
    </RadioGroup>

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subir estudiantes:"
        android:textColor="@android:color/black"
        android:layout_marginTop="11dp"
        android:layout_alignTop="@+id/btn_subirEstudiantes"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_subirEstudiantes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_green_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_menu_upload"
        android:layout_below="@+id/btn_agregarMateria"
        android:layout_alignLeft="@+id/btn_agregarGrupo"
        android:layout_alignStart="@+id/btn_agregarGrupo" />


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/nmbProfe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="31dp"
        android:text="Ingrese nombre:"
        android:textColor="@android:color/black" />


    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/nmbProfe"
        android:layout_toRightOf="@+id/nmbProfe"
        android:ems="10"
        android:inputType="textPersonName" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Agregar grupo"
        android:textColor="@android:color/black"
        android:layout_marginTop="51dp"
        android:layout_below="@+id/p_especif"
        android:layout_toRightOf="@+id/p_especif"
        android:layout_toEndOf="@+id/p_especif"
        android:layout_marginLeft="38dp"
        android:layout_marginStart="38dp" />

    <RadioButton
        android:id="@+id/p_director"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Director"
        android:layout_below="@+id/textView5"
        android:layout_alignLeft="@+id/textView5"
        android:layout_alignStart="@+id/textView5"
        android:layout_marginTop="11dp" />

    <RadioButton
        android:id="@+id/p_especif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginStart="18dp"
        android:text="EspecÃ­fico"
        android:layout_alignBaseline="@+id/p_director"
        android:layout_alignBottom="@+id/p_director"
        android:layout_alignLeft="@+id/editText"
        android:layout_alignStart="@+id/editText" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Seleccione su tipo de profesor:"
        android:textColor="@android:color/black"
        android:layout_below="@+id/editText"
        android:layout_alignLeft="@+id/nmbProfe"
        android:layout_alignStart="@+id/nmbProfe"
        android:layout_marginTop="9dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="29dp"
        android:text="Agregar materia"
        android:textColor="@android:color/black"
        android:layout_below="@+id/btn_agregarGrupo"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_agregarGrupo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_green_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_toRightOf="@+id/textView6"
        android:layout_toEndOf="@+id/textView6" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/btn_agregarMateria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/btn_agregarGrupo"
        android:layout_alignStart="@+id/btn_agregarGrupo"
        android:layout_below="@+id/btn_agregarGrupo"
        android:layout_marginTop="20dp"
        android:clickable="true"
        app:backgroundTint="@android:color/holo_green_dark"
        app:fabSize="mini"
        app:srcCompat="@android:drawable/ic_input_add" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="false"
    android:focusable="false"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical"


    tools:context="co.edu.udea.compumovil.gr01_20171.proyectoescuela.Vista.CategoriaAdapter">


    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:orientation="vertical">

        <TextView
            android:focusableInTouchMode="false"
            android:focusable="false"
            android:id="@+id/subCategoria_nombre_categoria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Nombre Categoria"
            android:textColor="@color/colorBlanco"
            android:textSize="@dimen/titulo_1_size" />

    </LinearLayout>

    <TextView
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:id="@+id/Subcategoria_nombre_subcategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Nombre Subcategoria"
        android:textSize="@dimen/titulo_1_size"
        android:textStyle="bold" />

    <TextView
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:id="@+id/Subcategoria_cantidad_subcategoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text=""
        android:textSize="@dimen/titulo_1_size"
        android:textStyle="bold" />

</LinearLayout>
